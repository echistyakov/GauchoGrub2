<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ListPreference's summary set to its value by the activity code. -->
    <ListPreference
        android:key="default_dining_common"
        android:entries="@array/dining_commons"
        android:entryValues="@array/dining_commons_values"
        android:title="@string/pref_title_default_dining_common" />

    <SwitchPreference
        android:key="geolocation_override_switch"
        android:defaultValue="false"
        android:title="@string/pref_title_geolocation_override"
        android:summary="@string/pref_summary_geolocation_override"/>

    <MultiSelectListPreference
        android:key="default_filter"
        android:title="@string/pref_title_default_filter" />

    <SwitchPreference
        android:key="favorites_notification_switch"
        android:defaultValue="false"
        android:title="@string/pref_title_favorites_notification" />
</PreferenceScreen>
