<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingRight="@dimen/ScheduleFragment_header_side_padding"
        android:paddingLeft="@dimen/ScheduleFragment_item_side_padding"
        android:paddingTop="@dimen/ScheduleFragment_item_vertical_padding"
        android:paddingBottom="@dimen/ScheduleFragment_item_vertical_padding"
        android:textSize="@dimen/ScheduleFragment_item_text_size"
        android:layout_weight="2"
        android:id="@+id/ScheduleFragment_mealNameTextView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="left"
        android:paddingRight="@dimen/ScheduleFragment_header_side_padding"
        android:paddingLeft="@dimen/ScheduleFragment_item_side_padding"
        android:paddingTop="@dimen/ScheduleFragment_item_vertical_padding"
        android:paddingBottom="@dimen/ScheduleFragment_item_vertical_padding"
        android:textSize="@dimen/ScheduleFragment_item_text_size"

        android:id="@+id/ScheduleFragment_mealTimeTextView" />
</LinearLayout>