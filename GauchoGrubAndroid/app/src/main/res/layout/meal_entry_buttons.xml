<?xml version="1.0" encoding="utf-8"?>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/bottombar"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff54d4ff"
            style="@android:style/ButtonBar"
    android:clickable="false">


            <ImageButton  android:id="@+id/thumbsUpButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/upvote_off_xxhdpi"
                android:padding="15dp"
                android:clickable="true"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/thumbsDownButton"
                android:layout_toStartOf="@+id/thumbsDownButton"></ImageButton >

            <ImageButton  android:id="@+id/thumbsDownButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/downvote_off_xxhdpi"
                android:padding="15dp"
                android:clickable="true"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:layout_alignTop="@+id/thumbsUpButton"
                android:layout_toLeftOf="@+id/favoriteButton"
                android:layout_toStartOf="@+id/favoriteButton"></ImageButton >

            <ImageButton  android:id="@+id/favoriteButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/favorite_off_xxhdpi"
                android:padding="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:clickable="true"></ImageButton >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/ratingView"
        android:paddingLeft="70dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/thumbsUpButton"
        android:layout_toStartOf="@+id/thumbsUpButton" />


</RelativeLayout>
